<div id="alert">
  <%= flash[:alert] %>
</div>

<h1><%= "Order #{@order.id}" %></h1>
<h3><%= "#{@order.user.full_name}"%><br><%= "#{@order.user.email}" %></h3>

<div id="history">
  <table class='table table-bordered'>
    <thead>
      <div class="warning">
      <tr>
        <th data-field='Order Number'> Item </th>
        <th data-field='Quantity'>Quantity</th>
        <th data-field="Price">Price</th>
        <th data-field='Subtotal'>Subtotal</th>
        <th data-field='Order Status'>Order Status</th>
      </tr>
    </div>
    </thead>
    <% @order.item_orders.each do |item_order| %>
      <tr>
        <td><%= link_to item_order.item.title, item_path(item_order.item) %></td>
        <td><%= item_order.quantity %></td>
        <td><%= number_to_currency item_order.item.price / 100 %></td>
        <td><%= number_to_currency item_order.line_item_cost / 100 %></td>
        <td><%= @order.status %></td>
      </tr>
    <% end %>
  </table>
</div>
