<div id="categories_header">
  <h1>Categories</h1>
  <%= link_to 'Back', admin_dashboard_path %>
</div>

<div class="category-row">
  <% @categories.each do |category| %>
  <a class="btn" href="<%= items_path(category_name: category.name) %>">
    <i class="<%= category.image %> fa-3x"><br>
    </i>  <%= category.name %></a>
    <% end %>
</div>

<div class="category">
  <h1> Create New Category </h1>
  <%= bootstrap_form_for(:categories, style: :inline, url: categories_path) do |f| %>
  <%= f.text_field :name %>
  <%= f.submit "Add Category" %>
  <% end %>
  <h3>Logo Roulette Will Take Place For Your Category.</h3>
</div>
